root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80

[*.md]
max_line_length = 0

[{src,scripts}/**.{ts,json,js}]
#end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[Makefile]
indent_size = 8
indent_style = tab